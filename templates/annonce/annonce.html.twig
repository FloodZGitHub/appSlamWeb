{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Annonces{% endblock %}

{% block stylesheets %}

<!-- Bootstrap CSS -->
<link href="https://bootswatch.com/5/yeti/bootstrap.min.css" rel="stylesheet"> 


{% endblock %}

{% block body %}
    <h1 class="text-center text-primary"> Les annonces</h1>

    
  
      <div class="row row-cols-1 row-cols-md-3 g-4">
      {% for annonce in annonces %}
        <div class="col">
          <div class="card h-100">
            {% for f in annonce.fichier %}{% if loop.first %}
              <img src='../uploads/fichiers/{{f.nom}}' class="card-img-top" width="10%" alt="..."  >
              {% endif %}
            {% endfor %}
              <div class="card-body">
                 <h5 class="card-title">{{annonce.designation}}</h5>
                {% for t in annonce.type %}<p class="card-text">Type : {{t.libelle |capitalize }}</p>{% endfor %}
                <p class="card-text">{{annonce.description }}</p>
                <p class="card-text">{{annonce.prix}} â‚¬</p>
                <p class="card-text"> {{annonce.region}}, {{annonce.ville}}, {{annonce.codepostal}} </p>
                <a href="#" class="btn btn-primary " style="position: relative;bottom:2%">Go somewhere</a>
              </div>
            <div class="card-footer">
              <small class="text-muted">{{annonce.datepost |date("d-m-y")}}</small>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
  


{% endblock %}
{% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Envoyer message{% endblock %}

{% block body %}

<h1 class="text-center text-primary"> Ajouter message</h1>

    <div class="container">
            <div class="row justify-content-center">
                <div class="col-6">
                {{form_start(form)}}
                    {{form_label(form.contenu, 'Message :', {'label_attr':{'class':'fw-bold mt-4'}})}}
                    {{form_widget(form.contenu, {'attr':{'class':'form-control mb-4 ', 'placeholder':'Message...'}})}}   
                    {{form_label(form.userrecoi, "Utilisateur :", {'label_attr':{'class':'fw-bold mt-4'}})}}
                    {{form_widget(form.userrecoi, {'attr':{'class':'form-control mb-4', 'placeholder':"Utilisateur..."}})}} 

                    <div class="text-center">
                    {{form_widget(form.save, {'label':"Envoyer le message", 'attr':{'class':'btn btn-primary'}})}}
                    </div>
                {{form_end(form, {render_rest: true})}}
                    
                </div>
            </div>
    </div>


{% endblock %}